<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 32 32">
  <defs>
    <linearGradient id="bgGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="#8B5CF6" />
      <stop offset="100%" stop-color="#3B82F6" />
    </linearGradient>
    <linearGradient id="clockGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="#A78BFA" />
      <stop offset="100%" stop-color="#93C5FD" />
    </linearGradient>
  </defs>
  
  <!-- Background circle -->
  <circle cx="16" cy="16" r="15" fill="url(#bgGradient)" />
  
  <!-- Clock face -->
  <circle cx="16" cy="16" r="11" fill="white" fill-opacity="0.9" />
  
  <!-- Hour marks -->
  <g stroke="url(#clockGradient)" stroke-width="2" stroke-linecap="round">
    <line x1="16" y1="6" x2="16" y2="8" />
    <line x1="26" y1="16" x2="24" y2="16" />
    <line x1="16" y1="26" x2="16" y2="24" />
    <line x1="6" y1="16" x2="8" y2="16" />
  </g>
  
  <!-- Clock hands -->
  <g fill="url(#clockGradient)">
    <polygon points="16,16 15,12 17,12" />
    <polygon points="16,16 15,8 17,8" />
  </g>
  
  <!-- Center dot -->
  <circle cx="16" cy="16" r="1" fill="url(#clockGradient)" />
</svg>